<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globe.hand.Main.MainActivity">

    <include layout="@layout/layout_toolbar"
        android:id="@+id/main_toolbar" />

    <RelativeLayout
        android:id="@+id/user_info_container"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/image_user_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/text_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/image_user_profile"
                android:singleLine="true"
                android:text="유저"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_my_event"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/talk" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_info_container"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_map"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:textSize="40dp"
                android:background="@color/light_gray"
                android:text="@string/main_map" />

            <Button
                android:id="@+id/button_friend"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:layout_margin="8dp"
                android:textSize="40dp"
                android:textColor="@android:color/black"
                android:background="@color/light_gray"
                android:text="@string/main_friend" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_event"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:background="@color/light_gray"
                android:text="@string/main_event" />

            <Button
                android:id="@+id/button_setting"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"
                android:background="@color/light_gray"
                android:text="@string/main_setting" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
