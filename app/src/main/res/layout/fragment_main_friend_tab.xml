<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context="com.globe.hand.Main.Tab3Friend.MainFriendTabFragment">


        <RelativeLayout
            android:id="@+id/freind_tab_layout_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/friend_fragment_friend_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@color/trans"
                android:src="@drawable/friend_list_btn" />

            <ImageButton
                android:id="@+id/friend_fragment_request_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@color/trans"
                android:src="@drawable/friend_request_list" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/friend_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/freind_tab_layout_1"
            android:layout_marginTop="10dp"
            android:layout_weight="7.5" />


    </LinearLayout>


</ScrollView>


