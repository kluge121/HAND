<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/friend_request_item_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:src="@drawable/dangdange" />

    <TextView
        android:id="@+id/friend_request_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/friend_request_item_profile"
        android:text="댕댕이"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/friend_request_item_marker_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/friend_request_item_name"
        android:text="마커 : 5개"
        android:textSize="20sp" />

    <Button
        android:id="@+id/friend_request_item_follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/friend_request_item_marker_count"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:text="@string/follow"

        />


</RelativeLayout>