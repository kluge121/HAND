<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/alarm_item_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dangdange" />

    <TextView
        android:id="@+id/alarm_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_item_profile"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:text="댕댕이"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/alarm_item_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/alarm_item_profile"
        android:gravity="center"
        android:text="알람내용이 띠용하고 와버리는 곳" />


</RelativeLayout>